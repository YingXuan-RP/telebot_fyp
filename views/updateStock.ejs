<body>
  <div class="app-container">
    <main class="main-content">
      <header class="content-header">
        <h1>Update Stock</h1>
      </header>

      <div class="table-container" style="max-width: 500px;">
        <p><strong>Product:</strong> <%= product.name %></p>
        <p><strong>Current Stock:</strong> <%= product.stock %></p>

        <% if (error) { %>
          <p style="color:red;"><%= error %></p>
        <% } %>

        <form method="POST" action="/admin/inventory/update/<%= product.id %>">
          <div class="form-group">
            <label>New Stock</label>
            <input
              type="number"
              name="stock"
              min="0"
              value="<%= product.stock %>"
              required
            />
          </div>

          <div style="margin-top: 15px;">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/admin/inventory" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </main>
