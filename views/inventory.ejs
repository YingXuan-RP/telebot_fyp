        </a>

        <a href="/analytics" class="nav-item">
            <span class="nav-icon">üìà</span>
            <span class="nav-text">Analytics</span>
        </a>

    </nav>

    <!-- Notifications -->
    <div class="sidebar-notifications">
        <div class="notifications-header">
            <span>Notifications</span>
            <span class="notifications-count" id="notifCount"></span>
        </div>

        <div class="notifications-list" id="notificationsList"></div>
    </div>

    <form action="/logout" method="POST">
        <button type="submit" class="btn btn-secondary btn-block">
            Logout
        </button>
    </form>

</aside>


  <!-- ===== MAIN CONTENT ===== -->
  <main class="main-content">

    <header class="content-header">
      <h1>Inventory</h1>
    </header>

    <!-- ===== STATS ===== -->
    <div class="inventory-stats">
      <div class="stat-card">
        <div class="stat-label">Total Products</div>
        <div class="stat-value"><%= stats.total %></div>
      </div>

      <div class="stat-card">
        <div class="stat-label">In Stock</div>
        <div class="stat-value"><%= stats.inStock %></div>
      </div>

      <div class="stat-card warning">
        <div class="stat-label">Low Stock</div>
        <div class="stat-value"><%= stats.lowStock %></div>
      </div>

      <div class="stat-card danger">
        <div class="stat-label">Out of Stock</div>
        <div class="stat-value"><%= stats.outOfStock %></div>
      </div>
    </div>

    <!-- ===== INVENTORY TABLE ===== -->
<div class="table-container">
  <table class="data-table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Category</th>
        <th>Telegram Stock</th>
        <th>Warehouse Stock</th>
        <th>Status</th>
        <th>Price (SGD)</th>
        <th>Actions</th>
      </tr>
    </thead>

<tbody>
  <% products.forEach(product => { %>
    <tr>

      <td><strong><%= product.name %></strong></td>

      <td><%= product.category_name || '-' %></td>

      <!-- TELEGRAM STOCK (USING STOCK COLUMN NOW) -->
      <td>
        <span class="badge badge-info">
          <%= Number(product.stock || 0) %>
        </span>
      </td>

      <!-- WAREHOUSE STOCK (READ ONLY DISPLAY) -->
      <td>
        <span class="badge badge-secondary">
          <%= Number(product.warehouse_stock || 0) %>
        </span>
      </td>

      <!-- STATUS BASED ON TELEGRAM STOCK -->
      <td>
        <% if (Number(product.stock || 0) === 0) { %>
          <span class="badge badge-danger">Out of Stock</span>
        <% } else if (Number(product.stock || 0) <= 10) { %>
          <span class="badge badge-warning">Low Stock</span>
        <% } else { %>
          <span class="badge badge-success">In Stock</span>
        <% } %>
      </td>

      <td>$<%= Number(product.price).toFixed(2) %></td>

      <td>
        <a href="/admin/inventory/update/<%= product.id %>" 
           class="btn btn-sm btn-secondary">
          Update Stock
        </a>
      </td>

    </tr>
  <% }) %>
</tbody>

  </table>
</div>


  </main>
</div>

<!-- ===== STOCK MODAL (UI ONLY FOR NOW) ===== -->
<div id="stockModal" class="modal">
  <div class="modal-content modal-small">
    <div class="modal-header">
      <h2>Update Stock</h2>
      <button class="modal-close" onclick="closeStockModal()">&times;</button>
    </div>

    <form id="stockForm">
      <input type="hidden" id="stockProductId">

      <p>
        <strong id="stockProductName"></strong><br>
        Current stock: <span id="currentStock">0</span>
      </p>

      <div class="form-group">
        <label>New Stock *</label>
        <input type="number" id="stockQuantity" min="0" required>
      </div>

      <div class="form-actions">
        <button type="button" class="btn btn-secondary" onclick="closeStockModal()">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/common.js"></script>
<script src="/js/inventory.js"></script>
</body>
</html>
